<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AWLike.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Entry Placeholder="Username" Text="{Binding UsernameEntry}"/>
                <Entry Placeholder="Email" Text="{Binding EmailEntry}"/>
                <Entry Placeholder="Password" IsPassword="True" Text="{Binding PasswordEntry}"/>
                <Entry Placeholder="Confirm Password" IsPassword="True" Text="{Binding PasswordConfirmEntry}"/>

                <Button Text="Register" Command="{Binding RegisterCommand}"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>